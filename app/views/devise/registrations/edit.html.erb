<div class="body-user-edit">
  <h2>Mettez à jour votre profil <%= resource_name.to_s.humanize %></h2>
  <div class="shadow-sm p-3 mb-5 bg-white rounded">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <div class="row">
          <div class="col-sm-6">
            <%= f.input :first_name, required: true, label: "Prénom"  %>
          </div>
          <div class="col-sm-6">
            <%= f.input :last_name, required: true, label: "Nom" %>
          </div>
          <div class="col-sm-6">
            <%= f.input :email, required: true, autofocus: true, label: "Adresse email" %>
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>
          </div>
          <div class="col-sm-6">
            <%= f.input :phone_number, required: false, label: "Numéro de téléphone" %>
          </div>
          <div class="col-sm-4">
            <%= f.input :current_password,
                hint: "renseignez votre mot de passe actuel pour enregistrer tout changement",
                required: true,
                input_html: { autocomplete: "current-password" }, label: "Mot de passe actuel" %>
          </div>
          <div class="col-sm-4">
            <%= f.input :password,
                hint: "laissez vite si vous ne souhaitez pas modifier votre mot de passe",
                required: false,
                input_html: { autocomplete: "new-password" }, label: "Nouveau mot de passe" %>
          </div>
          <div class="col-sm-4">
            <%= f.input :password_confirmation,
                hint: "répétez votre nouveau mot de passe",
                required: false,
                input_html: { autocomplete: "new-password" }, label: "Nouveau mot de passe" %>
          </div>
        </div>
      </div>
    </div>
    <div class="form-actions btn btn-outline-primary btn-lg btn-block user-edit-btn">
      <%= f.button :submit, "Mettre à jour" %>
    </div>
  <% end %>
  <div class="d-flex">
    <div class="p-2">
      <%= link_to "Retour", :back %>
    </div>
    <div class="ml-auto p-2">
      <p>Insatisfait? <%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Etes-vous certain?" }, method: :delete %></p>
    </div>
  </div>
</div>
