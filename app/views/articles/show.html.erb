<div class="show-page">
  <div class="card-show">
    <%= cl_image_tag @article.photo %>
    <div class="card-show-infos">
      <div class="description">
        <h2><%= @article.name %></h2>
        <br>
        <p><%= @article.description %></p>
      </div>
      <h2 class="card-show-pricing"></h2>
      <h3><%= @article.price %> € par jour</h3>
      <%= link_to 'Back to our articles', articles_path, class: 'btn btn-outline-secondary' %>
  </div>
</div>

      <div class="form-show-group">
        <h2 class="heading">Formulaire de location</h2>
        <br>
          <div class="form-form">
            <div class="grid">
              <div class="col-1-4 col-1-4-sm">
                <div class="controls">
                  <input type="date" id="rent-start" name="start">
                  <label for="debut" class="label-date"><i class="fa fa-calendar"></i>&nbsp;&nbsp;Début de location</label>
                </div>      
              </div>
              <div class="col-1-4 col-1-4-sm">
                <div class="controls">
                  <input type="date" id="rent-end" name="end">
                  <label for="depart" class="label-date"><i class="fa fa-calendar"></i>&nbsp;&nbsp;Fin de location</label>
                </div>
                </div>
                <br>
                <div class="rent-sum-up">
                  <div class="details">
                    <p>jours de location : x</p>
                    <p>prix par jour de location</p>
                  </div>
                  <br>
                  <div class="rent-price">
                    <h5>Total : tant euro</h5>
                  </div>
                </div
              </div>
            <button type="button" class="btn btn-secondary btn-lg btn-block" value="Submit">Je loue</button>
          </div>
      </div>
    </div>
  </div>
