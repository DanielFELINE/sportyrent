<div class="container">
  <div class="show-page mb-3">
    <%= render "shared/card_show" %>
    <%= render "shared/form_show" %>
  </div>
  <div class="shadow p-3 mb-5 bg-white rounded", value="ajouter un avis">
    <%= simple_form_for [@article, @review] do |f| %>
      <%= f.input :content, class: "shadow-sm p-3 mb-5 bg-white rounded", label: 'Ajoutez une review' %>
      <%= f.button :submit %>
    <% end %>
  </div>
  <div >
    <% @article.reviews.each do |review| %>
      <p class="border rounded p-3" style="background-color: white">
        L'avis de <strong><%= current_user.first_name  %></strong> : <%= review.content %></p>
    <% end %>
  </div>
</div>
