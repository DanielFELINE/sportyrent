<div class="card-show">
  <%= cl_image_tag @article.photo %>
    <div class="card-show-infos">
    <%= cl_image_tag @article.user.picture %>
    <p class="avatar-name"><%= @article.user.first_name %><%= @article.user.last_name %></p>
      <div class="description">
        <h2><%= @article.name %></h2>
        <br>
        <p><%= @article.description %></p>
      </div>
      <h2 class="card-show-pricing"></h2>
      <h3><%= @article.price %> € par jour</h3>
      <%= link_to 'Retour à la liste', articles_path, class: 'btn btn-outline-secondary' %>
    </div>
</div>