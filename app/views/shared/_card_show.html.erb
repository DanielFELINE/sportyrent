<div class="card-show">
  <%= cl_image_tag @article.photo %>
  <div class="avatar-infos">
    <%= cl_image_tag @article.user.picture, class: "avatar-large", alt: "avatar-large" %>
    <p><%= @article.user.first_name %> <%= @article.user.last_name %></p>
  </div>
  <div class="card-show-infos">
    <div class="description">
      <h2><%= @article.name %></h2>
      <br>
      <p><%= @article.description %></p>
    </div>
    <h2 class="card-show-pricing"></h2>
    <h3><%= @article.price %> € par jour</h3>
    <div class="trash-show">
      <%= link_to article_path(), method: :delete, data: { confirm: 'Are you sure?'} do %>
        <span><i class="far fa-trash-alt"></i></span>
      <% end %>
    </div>
    <div class="edit"><i class="far fa-edit"></i></div>
    <%= link_to 'Retour à la liste', articles_path, class: 'btn btn-outline-secondary' %>
  </div>
</div>
